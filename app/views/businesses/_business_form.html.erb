<%= form_errors_for business %>

<%= form_for business do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, required: true %><br>

  <%= f.label :website %>
  <%= f.text_field :website %><br>

  <%= f.label :phone %>
  <%= f.text_field :phone %><br>

  <%= f.label :full_street_address %>
  <%= f.text_field :full_street_address %><br>


  Select a category:<br />
    <%= f.collection_radio_buttons :category_id, Category.all, :id, :name %><br />
  or add a new category:
    <%= f.text_field :new_category_name %>
    <br />

    <%= f.fields_for :business_rating, business.business_rating do |b| %>
        Business Rating
      <% 1.upto(5) do |i| %>
        <%= b.radio_button :rating, i, required: true %>
        <%= b.label :rating, i, :value => i %>
      <% end %>
    <% end %><br />


  <%= f.submit %>

<% end %>
