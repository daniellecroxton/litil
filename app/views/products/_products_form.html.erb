<%= form_errors_for product %>

<%= form_for([business, product]) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, required: true %><br>

    <%= f.fields_for :businesses_products, @businesses_products do |b| %>
        Product Rating
      <% 1.upto(5) do |i| %>
        <%= b.radio_button :product_rating, i %>
        <%= b.label :product_rating, i, :value => i %>
      <% end %>
    <% end %><br />

    <!-- add image? -->

    Add Tags:<br />
      <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %><br />
        <%= f.text_field :new_tag_name %>
      <br />


    <%= f.submit %>

  <% end %>
