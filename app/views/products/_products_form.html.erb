
<%= form_for([business, product]) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, required: true %><br>

    <!-- add image? -->

    Add Tags:<br />
      <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %><br />
      <%= f.fields_for :tag, product.tags do |tag_fields| %>
        <%= tag_fields.text_field :name, value: "" %>
      <% end %><br />


    <%= f.submit %>

  <% end %>
<% end %>
